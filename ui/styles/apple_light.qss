/* ==================== 스크롤바 ==================== */
QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(0, 122, 255, 0.3),
        stop:1 rgba(0, 122, 255, 0.5));
    border-radius: 4px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
        stop:0 rgba(0, 122, 255, 0.5),
        stop:1 rgba(0, 122, 255, 0.7));
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background-color: transparent;
    height: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0, 122, 255, 0.3),
        stop:1 rgba(0, 122, 255, 0.5));
    border-radius: 4px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0, 122, 255, 0.5),
        stop:1 rgba(0, 122, 255, 0.7));
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0;
}

/* ==================== 메시지 박스 ==================== */
QMessageBox {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255, 255, 255, 0.95),
        stop:1 rgba(242, 242, 247, 0.90));
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.04);
}

QMessageBox QLabel {
    color: #1C1C1E;
    font-size: 14px;
    padding: 6px 10px;
    font-weight: 500;
}

QMessageBox QPushButton {
    min-width: 80px;
    min-height: 36px;
    padding: 10px 16px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: 600;
    border: none;
    /* 그림자 효과 추가 */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

/* 메시지박스 버튼들 - 일관된 스타일 */
QMessageBox QPushButton[text="예"], 
QMessageBox QPushButton[text="Yes"],
QMessageBox QPushButton[text="확인"],
QMessageBox QPushButton[text="OK"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #007AFF,
        stop:1 #0051D5);
    color: white;
    /* 파란색 버튼 그림자 */
    box-shadow: 0 2px 8px rgba(0, 122, 255, 0.3);
}

QMessageBox QPushButton[text="아니오"], 
QMessageBox QPushButton[text="No"],
QMessageBox QPushButton[text="취소"],
QMessageBox QPushButton[text="Cancel"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(118, 118, 128, 0.10),
        stop:1 rgba(118, 118, 128, 0.15));
    color: #1C1C1E;
    border: 1px solid rgba(0, 0, 0, 0.1);
    /* 회색 버튼 그림자 */
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

/* 메시지 박스 아이콘 영역 */
QMessageBox QLabel[objectName="qt_msgboxex_icon_label"],
QMessageBox QLabel[objectName="qt_msgbox_label"] {
    padding: 0px;
    margin: 0px;
}

/* 아이콘만 있는 레이블 */
QMessageBox > QLabel {
    min-width: 32px;
    max-width: 32px;
}