}

QPushButton#stopAllButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255, 59, 48, 0.20),
        stop:1 rgba(255, 59, 48, 0.25));
}

/* 전체삭제 버튼 - iOS 시스템 색상 */
QPushButton#deleteAllButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255, 149, 0, 0.10),
        stop:1 rgba(255, 149, 0, 0.12));
