    border: none;
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    width: 32px;  /* 30 → 32 */
    border-top-right-radius: 10px;
}

QSpinBox::up-button:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0, 122, 255, 0.12),
        stop:1 rgba(0, 122, 255, 0.16));
}

QSpinBox::down-button {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0, 122, 255, 0.08),
        stop:1 rgba(0, 122, 255, 0.12));
    border: none;
    border-left: 1px solid rgba(0, 0, 0, 0.1);
    width: 32px;  /* 30 → 32 */
    border-bottom-right-radius: 10px;
}

QSpinBox::down-button:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(0, 122, 255, 0.12),
        stop:1 rgba(0, 122, 255, 0.16));
}

QSpinBox::up-arrow {
    image: url("C:/Users/changong/Desktop/newcoldhwak/resources/icons/up_arrow.png");
    width: 20px;
    height: 20px;
}

QSpinBox::down-arrow {
    image: url("C:/Users/changong/Desktop/newcoldhwak/resources/icons/down_arrow.png");
    width: 20px;
    height: 20px;
}

QCheckBox {
    spacing: 8px;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border-radius: 6px;
    border: 2px solid rgba(0, 0, 0, 0.12);
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 rgba(255, 255, 255, 0.95),
        stop:1 rgba(242, 242, 247, 0.90));
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #007AFF,
        stop:1 #0051D5);
    border-color: #007AFF;
}

/* ==================== 버튼 ==================== */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
        stop:0 #007AFF,
        stop:1 #0051D5);
    color: white;
    border: none;
    border-radius: 10px;
    padding: 8px 14px;  /* 10px 16px → 8px 14px */
    font-size: 12px;    /* 14 → 12 */
